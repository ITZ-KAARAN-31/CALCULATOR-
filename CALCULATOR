  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Basic Calculator</title>
  <style>
    body {
      background: linear-gradient(135deg, #1e90ff, #00bfff);
      display: flex;
      justify-content: center;
      align-items: center;
      height: 100vh;
      font-family: 'Poppins', sans-serif;
    }

    .calculator {
      background: #fff;
      border-radius: 15px;
      box-shadow: 0px 5px 15px rgba(0, 0, 0, 0.3);
      width: 300px;
      padding: 20px;
    }

    input {
      width: 100%;
      height: 60px;
      font-size: 1.5rem;
      text-align: right;
      border: none;
      outline: none;
      background: #f0f0f0;
      border-radius: 10px;
      margin-bottom: 15px;
      padding-right: 10px;
    }

    .buttons {
      display: grid;
      grid-template-columns: repeat(4, 1fr);
      gap: 10px;
    }

    button {
      height: 60px;
      font-size: 1.2rem;
      border: none;
      border-radius: 10px;
      background-color: #1e90ff;
      color: white;
      cursor: pointer;
      transition: 0.2s;
    }

    button:hover {
      background-color: #4682b4;
    }

    .equal {
      background-color: #00b300;
    }

    .equal:hover {
      background-color: #009900;
    }

    .clear {
      background-color: #ff4d4d;
    }

    .clear:hover {
      background-color: #e60000;
    }
  </style>
